		title= title + " | Comp Form"

	body.comp-form(class= debug?"debug":"")
		
		include ./_logo.pug
		if header_title
			header#top-nav.container
				.row.justify-content-md-center
					.col-md-10
						span 
							!= header_title
						.buttons
							a.previous(href=previous_url)
								i.fa.fa-caret-left.fa-lg
								!= previous
						
							a.next(href=next_url)
								!= next
								i.fa.fa-caret-right.fa-lg
		#content
			if hero_title
				#hero.container
					.row.justify-content-md-center
						.col-md-10
							h1= hero_title
							h6 The What
							p.description #{description}
							h6 The How
							p.software #{software}
				
			#copy.container
				.row.justify-content-md-center
					.col-md-10.comp-form-copy
						!=contents
			
			#scroll-out.container
		
		
		
